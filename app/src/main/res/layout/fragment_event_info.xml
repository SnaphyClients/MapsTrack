<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="com.snaphy.mapstrack.Fragment.EventInfoFragment"
    android:id="@+id/fragment_info_container"
    android:background="@color/background"
    android:clickable="true">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom|center"
                android:text="@string/fragment_event_info_textview1"
                android:textSize="13sp"
                android:id="@+id/fragment_event_info_textview1"
                android:layout_marginBottom="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightdarkColor"
                android:layout_below="@+id/fragment_event_info_textview1"
                android:id="@+id/view1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom|center"
                android:text="@string/fragment_event_info_textview2"
                android:textSize="13sp"
                android:layout_below="@+id/view1"
                android:id="@+id/fragment_event_info_textview2"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightdarkColor"
                android:layout_below="@+id/fragment_event_info_textview2"
                android:id="@+id/view2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom|center"
                android:layout_below="@+id/fragment_event_info_textview2"
                android:text="@string/fragment_event_info_textview3"
                android:textSize="13sp"
                android:id="@+id/fragment_event_info_textview3"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightdarkColor"
                android:layout_below="@+id/fragment_event_info_textview3"
                android:id="@+id/view3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom|center"
                android:layout_below="@+id/fragment_event_info_textview3"
                android:text="@string/fragment_event_info_textview4"
                android:textSize="13sp"
                android:id="@+id/fragment_event_info_textview4"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightdarkColor"
                android:layout_below="@+id/fragment_event_info_textview4"
                android:id="@+id/view4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom|center"
                android:layout_below="@+id/fragment_event_info_textview4"
                android:text="@string/fragment_event_info_textview6"
                android:textSize="13sp"
                android:id="@+id/fragment_event_info_textview6"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightdarkColor"
                android:layout_below="@+id/fragment_event_info_textview6"
                android:id="@+id/view5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_gravity="bottom|center"
                android:layout_below="@+id/fragment_event_info_textview6"
                android:text="@string/fragment_event_info_textview5"
                android:textSize="13sp"
                android:id="@+id/fragment_event_info_textview5"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightdarkColor"
                android:layout_below="@+id/fragment_event_info_textview5"
                android:id="@+id/view6"/>


        </RelativeLayout>

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:fitsSystemWindows="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/fragment_event_info_imageview1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/default_image"
                        android:background="@color/colorPrimaryBackgroundImage"
                        app:layout_collapseMode="parallax" />

                </FrameLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_collapseMode="pin">

                    <ImageButton
                        android:paddingRight="4dp"
                        android:id="@+id/fragment_event_info_image_button1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/back_arrow"
                        android:background="@android:color/transparent" />

                    <TextView
                        android:padding="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/fragment_event_info_textview0"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="@string/fragment_event_info_textview0" />

                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

         <com.github.clans.fab.FloatingActionMenu
             android:id="@+id/fragment_event_info_floating_button1"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             fab:menu_icon="@mipmap/menu"
             fab:menu_labels_style="@style/MenuLabelsStyle"
             fab:menu_labels_showAnimation="@anim/jump_from_down"
             fab:menu_labels_hideAnimation="@anim/jump_to_down"
             fab:menu_animationDelayPerItem="0"
             fab:menu_shadowColor="#777777"
             fab:menu_colorNormal="@color/colorPrimary"
             fab:menu_colorPressed="@color/colorPrimaryDark"
             fab:menu_colorRipple="#FFFFFF"
             fab:menu_fab_size="normal"
             app:layout_anchor="@id/appbar"
             app:layout_anchorGravity="right"
             android:layout_marginRight="20dp"
             android:layout_marginBottom="20dp">


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fragment_event_info_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/edit"
            fab:fab_label="@string/layout_event_info_button1"
            style="@style/MenuButtonsStyle" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fragment_event_info_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/delete"
            fab:fab_label="@string/layout_event_info_button2"
            style="@style/MenuButtonsStyle" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fragment_event_info_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/map"
            fab:fab_label="@string/layout_event_info_button3"
            style="@style/MenuButtonsStyle" />

    </com.github.clans.fab.FloatingActionMenu>

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
