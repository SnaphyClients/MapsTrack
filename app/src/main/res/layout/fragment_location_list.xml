<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.snaphy.mapstrack.Fragment.LocationListFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_location_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginBottom="50dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEE"
        android:id="@+id/view"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:id="@+id/layout">

        <Button
            android:id="@+id/fragment_location_list_button1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="@string/fragment_location_list_button1"
            android:textColor="@color/darkGrey" />

        <Button
            android:id="@+id/fragment_location_list_button2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="@string/fragment_location_list_button2"
            android:textColor="@color/darkGrey"/>


        <Button
            android:id="@+id/fragment_location_list_button3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="@string/fragment_location_list_button3"
            android:textColor="@color/colorPrimary"/>


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="65dp"
        android:layout_marginRight="30dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/add"
        android:id="@+id/fragment_location_list_floating_button1"
        app:backgroundTint="@color/colorPrimary"/>

</RelativeLayout>
