<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/layout_event_list_textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="75dp"/>

        <TextView
            android:id="@+id/layout_event_list_textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/layout_event_list_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9 AM"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/layout_event_list_textview4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="15 Aug"
                android:gravity="right"
                android:textSize="16dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/layout_event_list_textview5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Anurag Birthday"
                android:textSize="16dp"
                android:textStyle="bold"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/layout_event_list_textview6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="by Anu"
                android:textSize="13dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/layout_event_list_textview7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1134, First Floor, Noida,126587, UP"
            android:paddingTop="3dp"
            android:textSize="13dp"/>

        <TextView
            android:id="@+id/layout_event_list_textview8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birthday Party"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:paddingTop="5dp"/>

    </LinearLayout>

</LinearLayout>