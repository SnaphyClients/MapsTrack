<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/background"
        android:id="@+id/view"
        android:layout_below="@+id/layout_location_home_menu_options_linear_layout2">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_location_home_menu_options_linear_layout3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/view">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layout_location_home_menu_options_textview1"
            android:id="@+id/layout_location_home_menu_options_textview1"
            android:textSize="16sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_location_home_menu_options_linear_layout1"
        android:layout_below="@+id/layout_location_home_menu_options_linear_layout3"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layout_location_home_menu_options_textview2"
            android:id="@+id/layout_location_home_menu_options_textview2"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_location_home_menu_options_linear_layout1"
        android:id="@+id/layout_location_home_menu_options_textview3"
        android:text="@string/layout_location_home_menu_options_textview3"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_location_home_menu_options_listview"
        android:layout_below="@+id/layout_location_home_menu_options_textview3"
        android:layout_marginTop="7dp"
        android:dividerHeight="0dp"
        android:divider="@null">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_location_home_menu_options_linear_layout2">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/share_purple"
            android:background="@android:color/transparent"
            android:id="@+id/layout_location_home_menu_options_imagebutton1"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_weight="1"/>

        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/edit_purple"
            android:background="@android:color/transparent"
            android:id="@+id/layout_location_home_menu_options_imagebutton2"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_weight="1"/>

        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/background"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/delete_purple"
            android:background="@android:color/transparent"
            android:id="@+id/layout_location_home_menu_options_imagebutton3"
            android:layout_gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>